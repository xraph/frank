# ===========================
# STANDALONE MODE SETTINGS
# ===========================

# Enable standalone mode (bypasses multi-tenant requirements)
FRANK_STANDALONE_ENABLED=true

# Organization settings
FRANK_STANDALONE_ORG_NAME="My Company"
FRANK_STANDALONE_ORG_SLUG="my-company"

# API Credentials (required if auto_generate=false)
# Format: pk_standalone_<random> and sk_standalone_<random>
FRANK_STANDALONE_PUBLIC_KEY=pk_standalone_your_public_key_here
FRANK_STANDALONE_SECRET_KEY=sk_standalone_your_secret_key_here

# Auto-generate credentials if not provided (default: true)
# Set to false if you want to provide your own keys
FRANK_STANDALONE_AUTO_GENERATE=false

# ===========================
# APPLICATION SETTINGS
# ===========================
APP_NAME=frank
ENVIRONMENT=development
PORT=8080
BASE_URL=http://localhost:8080
SHUTDOWN_TIMEOUT=30s
ENV=development

# ===========================
# DATABASE SETTINGS
# ===========================
# Database settings
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=frank
DB_SSL_MODE=disable
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=25
DB_CONN_MAX_LIFETIME=15m

# ===========================
# REDIS (Optional)
# ===========================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Log settings
LOG_LEVEL=debug # debug, info, warn, error, fatal

# Auth settings
SESSION_SECRET_KEY=super-secret-session-key-change-me-in-production
TOKEN_SECRET_KEY=super-secret-token-key-change-me-in-production
TOKEN_SIGNING_METHOD=HS256
TOKEN_ISSUER=frank-auth
TOKEN_AUDIENCE=frank-clients
ACCESS_TOKEN_DURATION=15m
REFRESH_TOKEN_DURATION=168h
SESSION_DURATION=24h
REQUIRE_EMAIL_VERIFICATION=true
DEFAULT_USER_ROLE=user

# Passkeys settings
PASSKEYS_RP_ID=localhost
PASSKEYS_RP_NAME=Frank Auth
PASSKEYS_RP_ORIGINS=http://localhost:8080
ATTESTATION_TIMEOUT=60000
ASSERTION_TIMEOUT=60000

# Security settings
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-API-Key
CORS_EXPOSED_HEADERS=Content-Type,X-Request-ID
CORS_ALLOW_CREDENTIALS=true
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_SECOND=10
RATE_LIMIT_BURST=20

# Email settings
EMAIL_PROVIDER=smtp # smtp, sendgrid, mailgun, ses
EMAIL_FROM=noreply@example.com
EMAIL_FROM_NAME=Frank Auth
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_SECURE=false
SMTP_FROM=noreply@example.com

# SMS settings
SMS_PROVIDER=twilio # twilio, nexmo, pinpoint
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Features flags
ENABLE_PASSKEYS=true
ENABLE_PASSWORDLESS=true
ENABLE_MFA=true
ENABLE_SSO=true
ENABLE_WEBHOOKS=true
ENABLE_ORGANIZATIONS=true
ENABLE_API_KEYS=true
ENABLE_OAUTH2_PROVIDER=true
ENABLE_OAUTH2_CLIENT=true

# OAuth2 provider settings
OAUTH2_AUTHORIZATION_CODE_EXPIRY=10m
OAUTH2_ACCESS_TOKEN_EXPIRY=1h
OAUTH2_REFRESH_TOKEN_EXPIRY=30d

# Webhook settings
WEBHOOK_RETRY_COUNT=3
WEBHOOK_TIMEOUT_MS=5000

# Database Configuration
DATABASE_URL=postgres://postgres:postgres@localhost:5432/frank

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Security Configuration
JWT_SECRET=your-jwt-secret-key
SESSION_SECRET=your-session-secret-key
ENCRYPTION_KEY=your-encryption-key

# OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret